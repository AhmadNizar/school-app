<!DOCTYPE html>
<html>
<head>
	<title></title>
    <% include ./partials/head %>
</head>
<body class='container'>
<main>
<header>
    <% include ./partials/header %>
</header>
        <div class="row">
                    <table style="width:100%">
                        <tr>
                        	<th>ID</th>                            
                        	<th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>Option</th>
                        </tr>
                        <% allTeacher.forEach((temps) => { %>
                        <tr>
                        	<td><%= temps.id%></td>
                            <td><%= temps.first_name%></td>
                            <td><%= temps.last_name%></td>
                            <td><%= temps.email%></td>
                            <% if(temps.Subject){%> 
                            <td><%= temps.Subject.subject_name%></td>
                            <% }else{%>
                            <td>Unassigned</td>
                            <% } %>
                            <td>
                                <a href="/teacher/deleteTeacher/<%= temps.id%>">Delete</a>
                                <a href="/teacher/editTeacher/<%= temps.id%>">Edit</a>
                            </td> 
                        </tr>
                        <% }); %>
                    </table>
        </div>

<footer>
    <% include ./partials/footer %>
</footer>
    </main>
</body>
</html>